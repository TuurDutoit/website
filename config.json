{
  "locals": {
    "url": "http://localhost:8080",
    "owner": "Tuur Dutoit",
    "description": "Webdeveloper. Trying to figure out life.",
    "keywords": "web,developement,developer,html,css,javascript",
    "copyrightDate": 2016,
    "links": {
      "Home": "/",
      "Projects": "/projects/",
      "Photography": "/photography/",
      "Blog": "http://tuurdutoit.tumblr.com"
    },
    "socials": {
      "GitHub": "https://github.com/TuurDutoit",
      "Twitter": "https://twitter.com/ArthurMansard",
      "Google+": "https://plus.google.com/+TuurDutoit",
      "Mail": "mailto:me@tuurdutoit.be"
    }
  },
  "ignore": ["**/.DS_Store", "**/_*"],
  "plugins": [
    "wintersmith-autoprefixer-less",
    "./plugins/respim"
  ],
  "require": {
    "Path": "path"
  },
  "jade": {
    "pretty": true
  },
  "markdown": {
    "smartLists": true,
    "smartypants": true,
    "gfm": true
  },
  "autoprefix": ["last 3 versions"],
  "respim": {
    "rules": {
      "preview": {
        "src": ["projects/*/preview.jpg", "projects/abhotw/home.jpg"],
        "dest": "%n@xs%e",
        "width": "300px",
        "height": "200px",
        "sizeMode": "cover"
      },
      "photography": {
        "src": "photography/*/*.JPG",
        "dest": "%n@medium%e",
        "width": "600px"
      }
    }
  }
}
